<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
   tools:context=".FirstMain"
    android:orientation="vertical"
    android:background="#313131"
   >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/imageview_start"
            android:scaleType="centerCrop"
            android:src="@drawable/dashboard_hero"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Cherry Work"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            />
    </FrameLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#313131"
    android:orientation="vertical"
    android:divider="#313131">

    <Button android:layout_width="match_parent"
        android:layout_height="@dimen/design_tab_min_width"
        android:id="@+id/intro"
        android:text="Introduction"
        android:background="#212121"
        android:textColor="#ffffff"
        android:layout_marginBottom="10dp"
        />

    <Button android:layout_width="match_parent"
        android:layout_height="@dimen/design_tab_min_width"
        android:id="@+id/col"
        android:text="Collaterals"
        android:background="#212121"
        android:textColor="#ffffff"
        android:layout_marginBottom="10dp"
        />

    <Button android:layout_width="match_parent"
        android:layout_height="@dimen/design_tab_min_width"
        android:id="@+id/demo"
        android:text="DEMO"
        android:background="#212121"
        android:textColor="#ffffff"
        android:layout_marginBottom="10dp"
        />

    <Button android:layout_width="match_parent"
        android:layout_height="@dimen/design_tab_min_width"
        android:id="@+id/team"
        android:text="Team"
        android:background="#212121"
        android:textColor="#ffffff"
        />

</LinearLayout>
</LinearLayout>
