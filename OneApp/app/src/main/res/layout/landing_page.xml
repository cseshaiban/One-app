                    app:mcv_showOtherDates="all"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/my_primary"
                    app:mcv_arrowColor="#ffffff"
                    app:mcv_selectionColor="#ffffff"
