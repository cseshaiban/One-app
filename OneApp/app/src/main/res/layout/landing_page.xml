            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                   >


                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#78909C" />

                    <!-- Center Availed and available text views -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp">

                        <!-- 1. Availed TextView -->
                        <RelativeLayout
                            android:id="@+id/l1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                           >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal">

                                <!-- Number of availed -->
                                <TextView
                                    android:id="@+id/availed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="70sp"
                                    android:includeFontPadding="false"


                                    />

                                <!-- Textview Availed -->
                                <TextView
                                    android:id="@+id/availedtext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16dp"
                                    android:text="AVAILED"
                                    android:textStyle="bold"
                                    android:layout_marginTop="-5dp"
                                    android:includeFontPadding="false"
                                    />

                            </LinearLayout>
                        </RelativeLayout>

                        <!-- 2. Available textviews -->
                        <RelativeLayout
                            android:id="@+id/l2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:orientation="vertical"
                                >
                                <!-- Available number -->

                                <TextView
                                    android:id="@+id/available"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="70sp"
                                    android:textStyle="normal"
                                    android:layout_gravity="center|center_horizontal"
                                    android:gravity="center"
                                    android:includeFontPadding="false"

                                    />
                                <!-- textview available -->
                                <TextView
                                    android:id="@+id/availabletext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16dp"
                                    android:text="AVAILABLE"
                                    android:textStyle="bold"
                                    android:layout_below="@+id/available"
                                    android:layout_gravity="center_horizontal"
                                    android:gravity="center_horizontal"
                                    android:layout_marginTop="-5dp"
                                    android:includeFontPadding="false"

                                    />

                            </LinearLayout>
                        </RelativeLayout>  <!-- Availble textview ends -->

                        <!-- Center margin vertical -->
                        <ImageView
                            android:id="@+id/line3"
                            android:layout_width="2dp"
                            android:layout_height="100dp"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="5dp"
                            android:background="#E0E0E0" />

                        <!-- Horizontal margin -->
                        <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/line3"
                            android:background="#E0E0E0" />

                    </RelativeLayout><!-- center part availed and available views end -->

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Leave Details"
                        android:textSize="15dp"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        android:layout_margin="2dp"
                        />

                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:layout_weight="0.3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Casual"
                            />

                        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                            android:layout_gravity="center_vertical"
                            android:id="@+id/progressBar1"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="10dp"
                            app:rcMax="100"
                            app:rcProgress="50"
                            app:rcProgressColor="@color/fabColor"
                            app:rcBackgroundColor="#e0e0e0"
                            />
                        <TextView
                            android:layout_weight="0.3"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center_vertical"
                            android:text="0/0"
                            android:id="@+id/progresstext1"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:layout_weight="0.3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Sick"/>

                        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                            android:layout_gravity="center_vertical"
                            android:id="@+id/progressBar2"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="10dp"
                            app:rcMax="100"
                            app:rcProgress="50"
                            app:rcProgressColor="@color/fabColor"
                            app:rcBackgroundColor="#e0e0e0"
                            />

                        <TextView
                            android:layout_weight="0.3"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center_vertical"
                            android:text="0/0"
                            android:id="@+id/progresstext2"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

