<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"

    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/my_primary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"></android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_account_circle_black_48dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img1"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/my_primary_text"
                android:text="Your Time Sheet for Sep 07 - Sep 13 has been Approved"
                />


        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:layout_marginTop="5dp"
            android:background="@color/divider_color"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:id="@+id/img2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_account_circle_black_48dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img2"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/my_primary_text"
                android:text="Your Time Sheet for Aug 31 - Sep 06 has been Approved"
                />


        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:layout_marginTop="5dp"
            android:background="@color/divider_color"/>

    </LinearLayout>

</LinearLayout>